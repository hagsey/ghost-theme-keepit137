{{!< default}}


<div name="blog" class="page tag-page">
  <div class="content-toggle-buttons row" hidden>
    <div name="content-button" class="toggle-button col-2 active-toggle">
      <h4>Posts</h4>
    </div>
    <div name="sidebar-button" class="toggle-button col-2">
      <h4>Side bar</h4>
    </div>
  </div>
  <div class="page-content blog-content clearfix container">
    {{#tag}}
    <div class="tag-header">
    <h2 class="tag-title">{{name}}</h2>
    </div>
    {{/tag}}
    {{> "blog_loop"}}
  </div>
</div>
<div class="clear-modal-layer" hidden></div>